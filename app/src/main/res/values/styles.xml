<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--This section is for Menu item-->
    <style name="textMenuStyle">
        <item name="android:textSize">18sp</item>
        <item name="android:typeface">sans</item>
        <item name="android:textColor">@android:color/secondary_text_light</item>
    </style>

    <!--This section is for current day of ByDayFragment-->
    <style name="currentDate">
        <item name="android:textSize">20sp</item>
        <item name="android:typeface">sans</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/currentDate</item>
    </style>

    <!--This section is for 2 tabs which are "Theo Ngay" & "Theo Tuan"-->
    <style name="customTabText" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">15sp</item>
    </style>

    <!--This section is for days of week of ByWeekFragment-->
    <style name="customTabDayOfWeek" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">13sp</item>
    </style>

    <!--This section is for CardView showing food-->
    <style name="foodCardTitle" parent="TextAppearance.AppCompat.Title">
        <item name="android:textSize">22sp</item>
        <item name="android:typeface">sans</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="foodCardDetails" parent="TextAppearance.AppCompat.Title">
        <item name="android:textSize">8sp</item>
        <item name="android:typeface">sans</item>
        <item name="android:maxLines">1</item>
    </style>
</resources>
