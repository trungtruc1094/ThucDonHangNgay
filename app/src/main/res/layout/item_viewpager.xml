<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/cardView"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    app:cardUseCompatPadding="true"
    app:cardCornerRadius="10dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_centerInParent="true"
            android:id="@+id/foodImage"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/canhkhoqua" />

        <TextView
            android:textColor="#ffffff"
            android:maxLines="1"
            android:layout_centerInParent="true"
            android:id="@+id/foodTitle"
            style="@style/foodCardTitle"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:gravity="center"
            android:text="@string/foodTitle1"
            android:background="#7d000000"/>

        <LinearLayout
            android:background="#9e000000"
            android:layout_alignBottom="@id/foodImage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="5dp">

            <TextView
                android:textColor="#ffffff"
                android:maxLines="1"
                style="@style/foodCardDetails"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="@string/levelName"/>

            <TextView
                android:textColor="#ffffff"
                style="@style/foodCardDetails"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="@string/level1"/>

            <TextView
                android:textColor="#ffffff"
                style="@style/foodCardDetails"
                android:maxLines="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="@string/timeName"/>

            <TextView
                android:textColor="#ffffff"
                style="@style/foodCardDetails"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="@string/time"/>

        </LinearLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>